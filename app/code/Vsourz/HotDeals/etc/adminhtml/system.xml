<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="vsourz" translate="label" sortOrder="400">
            <label>Vsourz</label>
        </tab>
        <section id="hotdeals" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Hot Deals</label>
            <tab>vsourz</tab>
            <resource>Vsourz_HotDeals::hotdeals</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Keep this enable to show hot deals on this site.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
